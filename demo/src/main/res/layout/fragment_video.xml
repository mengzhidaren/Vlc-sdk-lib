<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yyl.vlc.view.FrameLayoutScale
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.videolan.vlc.VlcVideoView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.yyl.vlc.view.FrameLayoutScale>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="#cccccccc"
            android:gravity="center"
            android:text="@string/change"
            android:visibility="visible" />

        <TextView
            android:id="@+id/changeSlave"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="#cccccccc"
            android:gravity="center"
            android:text="字幕切换"
            android:visibility="visible" />

        <TextView
            android:id="@+id/recordStart"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="#cccccccc"
            android:gravity="center"
            android:text="@string/recordstart" />

        <TextView
            android:id="@+id/recordStop"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="#cccccccc"
            android:gravity="center"
            android:text="@string/recordstop" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/snapShot"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="#cccccccc"
            android:gravity="center"
            android:text="@string/snapshot" />

        <com.yyl.vlc.view.FrameLayoutScale
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />
        </com.yyl.vlc.view.FrameLayoutScale>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="testDemo"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>
